<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 walking">
            <div class="card bg-light mb-3">
            <div class="card-header">
                <h1>Walking Challenge</h1>
                <p>Please fill in this form to add your challenge.</p>
            </div>
            <div class="card-body">
                <form class="walking-form" action="/api/walking" method="POST">
                    <div class="form-group row">
                        <label for="id-input" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="hidden" class="form-control" id="id-input" value="">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="walk-input" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="hidden" class="form-control" id="walk-input" value="walk">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="walking-goal" class="col-sm-4 col-form-label">Goals</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="walking-goal" name= "goal">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="walking-steps" class="col-sm-4 col-form-label">Steps</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="walking-steps" name= "steps">
                        </div>
                    </div>
                    </div>
                    <div class="form-group row">
                        <label for="walking-duration" class="col-sm-4 col-form-label">Duration on (minutes)</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="walking-duration" name= "duration" placeholder="10">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="walking-miles" class="col-sm-4 col-form-label">Miles</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" id="walking-miles" name= "miles" placeholder="1">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-sucess">Add Challenge</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
